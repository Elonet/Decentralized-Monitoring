{
  "name": "Decentralized Monitoring",
  "sockets": {
    "udp": {
      "send": "*",
	  "bind" : "*"
    },
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*"
    }
  },
  "version": "1.3",
  "description": "Software to allow monitoring from running clients.",
  "icons": { "16": "Decmon-16.png",
            "128": "Decmon-128.png" },
  "permissions": [
	"*://www.google.fr/*",
    "http://192.168.5.106/*",
    "storage",
    "identity"
  ],
  "manifest_version" : 2,
  "app" : {
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
  }
}
